<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_700">

            <ImageView
                android:id="@+id/iv_background"
                android:layout_width="350dp"
                android:layout_height="253dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_vector"
                app:srcCompat="@drawable/bg_round" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_background"
                app:layout_constraintStart_toStartOf="@+id/iv_background"
                app:layout_constraintTop_toTopOf="@+id/iv_background" />

            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_background"
                app:layout_constraintEnd_toEndOf="@+id/iv_background"
                app:layout_constraintStart_toStartOf="@+id/iv_background"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_vector" />

            <TextView
                android:id="@+id/firstProductList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/sf_pro_fonte_family"
                android:text="Shoes"
                android:textColor="@color/white"
                android:textSize="27sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_filter" />

            <ImageView
                android:id="@+id/iv_line_vector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/vector104"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstProductList" />

            <ImageView
                android:id="@+id/iv_line_vector2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/vector104"
                app:layout_constraintStart_toEndOf="@+id/iv_line_vector"
                app:layout_constraintTop_toBottomOf="@+id/firstProductList" />

            <TextView
                android:id="@+id/secondProductList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/sf_pro_fonte_family"
                android:text="Product Name"
                android:textColor="@color/white"
                android:textSize="27sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_background" />

            <ImageView
                android:id="@+id/iv_line_vector3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/vector104"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondProductList" />

            <ImageView
                android:id="@+id/iv_line_vector4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/vector104"
                app:layout_constraintStart_toEndOf="@+id/iv_line_vector3"
                app:layout_constraintTop_toBottomOf="@+id/secondProductList" />

            <ImageView
                android:id="@+id/iv_background2"
                android:layout_width="350dp"
                android:layout_height="253dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_vector3"
                app:srcCompat="@drawable/bg_round" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts2"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_background2"
                app:layout_constraintStart_toStartOf="@+id/iv_background2"
                app:layout_constraintTop_toTopOf="@+id/iv_background2" />

            <ProgressBar
                android:id="@+id/progress_circular2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/iv_background2"
                app:layout_constraintEnd_toEndOf="@+id/iv_background2"
                app:layout_constraintStart_toStartOf="@+id/iv_background2"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_vector3" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/sf_pro_fonte_family"
                android:text="Edvora"
                android:textColor="@color/white"
                android:textSize="47sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_filter"
                android:layout_width="180dp"
                android:layout_height="49dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Title"
                app:srcCompat="@drawable/bg_round" />

            <ImageView
                android:id="@+id/iv_clear_filters"
                android:layout_width="100dp"
                android:layout_height="49dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Title"
                app:srcCompat="@drawable/bg_round" />

            <TextView
                android:id="@+id/tv_clear_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="clear filter"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_clear_filters"
                app:layout_constraintEnd_toEndOf="@+id/iv_clear_filters"
                app:layout_constraintStart_toStartOf="@+id/iv_clear_filters"
                app:layout_constraintTop_toTopOf="@+id/iv_clear_filters" />

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/roboto"
                android:text="Filters"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_filter"
                app:layout_constraintStart_toStartOf="@+id/iv_filter"
                app:layout_constraintTop_toTopOf="@+id/iv_filter" />

            <ImageView
                android:id="@+id/iv_dropdown"
                android:layout_width="60dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_filter"
                app:layout_constraintEnd_toEndOf="@+id/iv_filter"
                app:layout_constraintTop_toTopOf="@+id/iv_filter"
                app:srcCompat="@drawable/polygon_27" />

            <ImageView
                android:id="@+id/iv_dropdownfilters"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/bg_round"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </ImageView>

            <TextView
                android:id="@+id/tv_filter2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/roboto"
                android:text="Filters"
                android:textColor="@color/white_transparent"
                android:textSize="24sp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@+id/iv_dropdownfilters"
                app:layout_constraintTop_toBottomOf="@+id/iv_filter" />

            <ImageView
                android:id="@+id/iv_line_vector5"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="@+id/iv_dropdownfilters"
                app:layout_constraintStart_toStartOf="@+id/iv_dropdownfilters"
                app:layout_constraintTop_toBottomOf="@+id/firstProductList"
                app:srcCompat="@drawable/vector104" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Products"
                android:textColorHint="@color/white"
                android:visibility="invisible"
                app:boxBackgroundColor="@color/black_700"
                app:layout_constraintEnd_toEndOf="@+id/iv_dropdownfilters"
                app:layout_constraintStart_toStartOf="@+id/iv_dropdownfilters"
                app:layout_constraintTop_toBottomOf="@+id/iv_line_vector5">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu2"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="State"
                android:textColorHint="@color/white"
                android:visibility="invisible"
                app:boxBackgroundColor="@color/black_700"
                app:layout_constraintEnd_toEndOf="@+id/iv_dropdownfilters"
                app:layout_constraintStart_toStartOf="@+id/iv_dropdownfilters"
                app:layout_constraintTop_toBottomOf="@+id/menu">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/menu3"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="City"
                android:textColorHint="@color/white"
                android:visibility="invisible"
                app:boxBackgroundColor="@color/black_700"
                app:layout_constraintEnd_toEndOf="@+id/iv_dropdownfilters"
                app:layout_constraintStart_toStartOf="@+id/iv_dropdownfilters"
                app:layout_constraintTop_toBottomOf="@+id/menu2">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>